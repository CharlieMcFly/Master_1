package Serveur;

import org.junit.Test;

import Exceptions.FTPConnexionException;

public class DataServiceTest {

	@Test(expected = FTPConnexionException.class)
	public void initializeActiveTestWrongPort() {
		FtpRequest ftp = mock(FtpRequest.class);
		DataService dcs = new DataService(ftp);
		dcs.initiActive("127.0.0.1", 545);

	}

	@Test(expected = ConnectionException.class)
	public void initializeActiveTestWrongAdress() {
		Session session = mock(Session.class);
		DataConnectionService dcs = new DataConnectionService(session);
		dcs.initializeActive("127.0.0.1", 545);

	}

}
