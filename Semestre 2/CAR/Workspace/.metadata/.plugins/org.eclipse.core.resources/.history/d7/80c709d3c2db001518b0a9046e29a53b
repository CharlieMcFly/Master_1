package Stategy;


import static org.mockito.Mockito.mock;

import java.io.File;

import org.junit.Test;
import org.mockito.Mockito;

import Serveur.FtpRequest;
import Strategy.RequestCDUP;

public class RequestCDUPTest {

	@Test
	public void testCDUPko() {
		
		FtpRequest ftp = mock(FtpRequest.class);
		String [] request = {"CDUP", "parent"};
		File file = mock(File.class);
		
		Mockito.when(file.getParent()).thenReturn("parent");
		Mockito.when(ftp.getServerPath()).thenReturn("test");		

		RequestCDUP cdup = new RequestCDUP();
		
		cdup.doRequest(ftp, request);
		
		Mockito.verify(ftp).sendMessage("500 no access to parent folder");
		
	}

}
