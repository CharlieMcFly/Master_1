package Serveur;

import static org.junit.Assert.*;

import org.junit.Test;

public class ClientTest {

	@Test
	public void testConnectPassOk() {
		User u = new User(1, "test", "test", "/home/test");
		boolean result = u.connect("test");
		assertEquals(result, true);
		assertEquals(u.connected, true);
	}

	@Test
	public void testConnectPassNotOk() {
		User u = new User(1, "test", "test", "/home/test");
		boolean result = u.connect("azerty");
		assertEquals(result, false);
		assertEquals(u.connected, false);
	}

	@Test
	public void testConnectAnonymous() {
		User u = new User(1, "anonymous", "", "/home/anonymous");
		boolean result = u.connect("");
		assertEquals(result, true);
		assertEquals(u.connected, true);
	}

}
