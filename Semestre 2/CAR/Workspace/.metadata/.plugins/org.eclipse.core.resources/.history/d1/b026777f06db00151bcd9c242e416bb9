package Strategy;

import Exceptions.RequestException;
import Serveur.FtpRequest;

public class RequestPASV implements Request{

	public void doRequest(FtpRequest ftp, String[] request)
			throws RequestException {

		final int port = Constants.DATA_PORT + session.getUser().getUserId();
		ftp.getDataService().initializePassive(port);
		ftp.sendMessage("227 Entering passive mode " + session.getServerAddress().replaceAll("\\.", ",") + "," + port / 256 + "," + port % 256);
		
	}

}
