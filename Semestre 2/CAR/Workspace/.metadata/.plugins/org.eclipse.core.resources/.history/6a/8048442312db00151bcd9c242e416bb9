package Serveur;

import java.io.IOException;
import java.io.OutputStream;
import java.net.Socket;

public class DataService {

	/* Pour le transfert de données */
	
	private Socket dataSocket;
	private int port;
	private OutputStream dataStream;
	private FtpRequest ftp; 
	
	public DataService(FtpRequest ftp){
		this.ftp = ftp;
	}
	
	public OutputStream openDataStream() {
		// Check si c'est passif
			// Accept sur serversocket
		// Ouverture canal de données
		try {
			this.dataStream = this.dataSocket.getOutputStream();
			return this.dataStream;
		} catch (final IOException e) {
			e.printStackTrace();
		}
		return this.dataStream;
		
	}

	public void closeDataStream() {
		
		try {
			this.dataSocket.close();
		} catch (final IOException e) {
		}
		this.dataSocket = null;
	}

	public void initActive(String hostname, int port){
		this.port = port;
		// Ouverture canal de données
		try {
			this.dataSocket = new Socket(hostname, port);
		} catch (final IOException e) {
			e.printStackTrace();
		}
		
	}
//	
//	public void initPassive(int port){
//		this.port = port;
//		// Ouverture canal de données
//		try {
//			this.dataSocket = new Socket(this.ftp.getSocket().getInetAddress().getHostName(), port);
//		} catch (final IOException e) {
//
//		}
//		
//	}

	public int getPort() {
		return port;
	}


	public void setPort(int port) {
		this.port = port;
	}

	public Socket getDataSocket() {
		return dataSocket;
	}


	public OutputStream getDataStream() {
		return dataStream;
	}


	public FtpRequest getFtp() {
		return ftp;
	}

	
}

