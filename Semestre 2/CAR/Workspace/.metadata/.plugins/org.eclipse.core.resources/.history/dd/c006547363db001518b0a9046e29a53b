package Strategy;

import java.io.File;

import Exceptions.RequestException;
import Serveur.FtpRequest;

public class RequestRMD implements Request{

	public void doRequest(FtpRequest ftp, String[] request)
			throws RequestException {

		File folder = new File(ftp.getClient().getPathname() + ftp.getServerPath() + request.getArgument());
		
		if (!folder.exists() || !folder.isDirectory()) {
			session.sendCommand("550 No such directory to delete");
		} else if (folder.delete()) {
			session.sendCommand("250 RMD command successfull");
		} else {
			session.sendCommand("550 Unable to delete directory");
		}
	}

}
