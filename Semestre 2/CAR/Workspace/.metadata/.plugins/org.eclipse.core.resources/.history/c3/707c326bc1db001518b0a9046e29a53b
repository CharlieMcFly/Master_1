package Commande.CommandeImpl;

import static org.mockito.Mockito.mock;

import java.io.File;

import org.junit.Test;
import org.mockito.Mockito;

import Serveur.FtpRequest;
import Strategy.RequestCDUP;

public class CDUPTest {

	@Test
	public void test() {
		
		FtpRequest ftp = mock(FtpRequest.class);
		String [] request = {"CDUP", "dossier"};
		File file = mock(File.class);
		
		Mockito.when(file.getParent()).thenReturn("dosier");
		Mockito.when(ftp.getServerPath()).thenReturn("file");
		Mockito.when(ftp.getServerPath()).thenReturn("");
		
		RequestCDUP cdup = new RequestCDUP();
		
		cdup.doRequest(ftp, request),
		
		Mockito.verify(session).setPath("parent");
		Mockito.verify(session).sendCommand("200 CDUP command successfull");
		
	}

}
