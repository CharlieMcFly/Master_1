package Commande.CommandeImpl;

import static org.mockito.Mockito.mock;

import org.junit.Test;
import org.mockito.Mockito;

import Serveur.FtpRequest;
import Strategy.RequestPWD;

public class PWDTest {

	@Test
	public void test() {
		FtpRequest ftp = mock(FtpRequest.class);
		
		Mockito.when(ftp.getServerPath()).thenReturn("");
		
		RequestPWD pwd = new RequestPWD();
		
		pwd.doRequest(ftp, new String(){"PWD"};);
		
		Mockito.verify(session).sendCommand("257 " + "\"" + "\"" + " is the current directory.");
		
		
	}

}
